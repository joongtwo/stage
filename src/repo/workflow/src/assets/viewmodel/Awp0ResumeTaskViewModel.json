{
    "schemaVersion": "1.0.0",
    "imports": [
        "js/aw-command-panel.directive",
        "js/aw-panel-body.directive",
        "js/aw-panel-section.directive",
        "js/aw-panel-footer.directive",
        "js/aw-button.directive",
        "js/aw-widget.directive",
        "js/aw-i18n.directive",
        "js/visible-when.directive"
    ],

    "actions": {
        "loadProperties": {
            "actionType": "TcSoaService",
            "serviceName": "Core-2006-03-DataManagement",
            "method": "getProperties",
            "inputData": {
                "objects": [
                    "{{props.subPanelContext.selectionData.value.selected[0]}}"
                ],
                "attributes": [
                    "object_string",
                    "object_desc",
                    "comments"
                ]
            },
            "policy": {
                "types": [ {
                        "name": "EPMTask",
                        "properties": [
                            {
                                "name": "parent_task",
                                "modifiers": [ {
                                    "name": "withProperties",
                                    "Value": "true"
                                } ]
                            },
                            {
                                "name": "fnd0ParentTask",
                                "modifiers": [ {
                                    "name": "withProperties",
                                    "Value": "true"
                                } ]
                            },
                            {
                                "name": "fnd0Instructions"
                            }

                        ]
                    },
                    {
                        "name": "EPMPerformSignoffTask",
                        "properties": [ {
                            "name": "parent_task",
                            "modifiers": [ {
                                "name": "withProperties",
                                "Value": "true"
                            } ]
                        },
                        {
                            "name": "fnd0Instructions"
                        } ]
                    },
                    {
                        "name": "EPMReviewTask",
                        "properties": [ {
                            "name": "parent_task",
                            "modifiers": [ {
                                "name": "withProperties",
                                "Value": "true"
                            } ]
                        } ,
                        {
                            "name": "fnd0Instructions"
                        }]
                    },
                    {
                        "name": "Signoff",
                        "properties": [ {
                                "name": "parent_task",
                                "modifiers": [ {
                                    "name": "withProperties",
                                    "Value": "true"
                                } ]
                            },
                            {
                                "name": "fnd0ParentTask",
                                "modifiers": [ {
                                    "name": "withProperties",
                                    "Value": "true"
                                } ]
                            }
                        ]
                    }
                ]
            },
            "events": {
                "success": [ {
                    "name": "resumeEPMTask.taskPropertiesLoaded"
                } ]
            },

            "deps": "js/Awp0InboxUtils"

        },
        "populatePanelData": {
            "actionType": "JSFunction",
            "method": "populatePanelData",
            "inputData": {
                "data": "{{data}}",
                "selection": "{{props.subPanelContext.selectionData.value.selected[0]}}"

            },
            "outputData": {
                "taskName": "taskName",
                "description": "description",
                "resumeTask" : "actionableTask"
            },
            "deps": "js/Awp0InboxUtils"
        },
        "resume": {
            "actionType": "TcSoaService",
            "serviceName": "Workflow-2014-06-Workflow",
            "method": "performAction3",
            "inputData": {
                "input": [ {
                    "actionableObject": "{{data.resumeTask}}",
                    "action": "SOA_EPM_resume_action",
                    "password": "",
                    "supportingValue": "",
                    "supportingObject": "",
                    "propertyNameValues": "{{function:getComments}}"
                } ]
            },
            "deps": "js/Awp0InboxUtils",
            "events": {
                "success": [
                    {
                        "name": "primaryWorkarea.reset",
                        "condition": "subPanelContext.openedObject === undefined"
                    },
                    {
                        "condition": "subPanelContext.openedObject != undefined",
                        "name": "cdm.relatedModified",
                        "eventData": {
                            "refreshLocationFlag": true,
                            "relatedModified": [
                                "{{props.subPanelContext.openedObject}}"
                            ]
                        }
                    },
                    {
                        "name": "complete",
                        "eventData":
                        {
                            "source": "toolAndInfoPanel"
                        }
                    },
                    {
                        "condition": "!subPanelContext.selectionData.value.pselected && subPanelContext.selectionData.value.selected[0] && ctx.locationContext['ActiveWorkspace:Location'] === 'com.siemens.splm.client.inbox.tasksLocation' && ( subPanelContext.pageContext.secondaryActiveTabId === 'tc_xrt_Overview' || subPanelContext.pageContext.secondaryActiveTabId === 'tc_xrt_Workflow')",
                        "name": "cdm.relatedModified",
                        "eventData": {
                            "refreshLocationFlag": true,
                            "relatedModified": [
                                "{{props.subPanelContext.selectionData.value.selected[0]}}"
                            ]
                        }
                    },
                    {
                        "condition": "subPanelContext.selectionData.value.pselected && subPanelContext.selectionData.value.selected[0] && ctx.locationContext['ActiveWorkspace:Location'] === 'com.siemens.splm.client.inbox.tasksLocation' && ( subPanelContext.pageContext.secondaryActiveTabId === 'tc_xrt_Overview' || subPanelContext.pageContext.secondaryActiveTabId === 'tc_xrt_Workflow')",
                        "name": "cdm.relatedModified",
                        "eventData": {
                            "refreshLocationFlag": true,
                            "relatedModified": [
                                "{{subPanelContext.selectionData.value.pselected}}"
                            ]
                        }
                    }
                ],
                "failure": [
                {
                    "name": "primaryWorkarea.reset",
                    "condition": "subPanelContext.openedObject === undefined && errorCode.code === 33321"
                },
                {
                    "condition": "subPanelContext.openedObject != undefined && errorCode.code === 33321",
                    "name": "cdm.relatedModified",
                    "eventData": {
                        "refreshLocationFlag": true,
                        "relatedModified": [
                            "{{props.subPanelContext.openedObject}}"
                        ]
                    }
                } ]
            },
            "actionMessages": {
                "failure": [
                    {
                        "message": "serverError"
                    }
                ]
            }
        },

        "closePanel": {
            "actionType": "Event",
            "method": "Event",
            "inputData": {
                "events": [ {
                    "name": "complete",
                    "condition": "!data.isDestroyed()",
                    "eventData": {
                        "source": "toolAndInfoPanel"
                    }
                } ]
            }
        },
        "closePanelOnSelectionChange": {
            "actionType": "batchJob",
            "steps": [
                {
                    "action": "cacheInitialSelection",
                    "condition": "!data.initialSelection"
                },
                {
                    "action": "closePanel",
                    "condition": "data.initialSelection !== props.subPanelContext.selectionData.selected[0].uid"
                }
            ]
        },
        "cacheInitialSelection":{
            "actionType": "JSFunction",
            "method": "cacheSelection",
            "inputData": {
                "selectedUid": "{{props.subPanelContext.selectionData.selected[0].uid}}"
            },
            "outputData": {
                "initialSelection": ""
            },
            "deps": "js/Awp0WorkflowUtils"
        }
    },

    "data": {
        "taskName": {
            "displayName": "{{i18n.taskName}}",
            "type": "STRING",
            "isEditable": "false",
            "dbValue": "",
            "uiValue": ""
        },

        "description": {
            "displayName": "{{i18n.object_desc}}",
            "type": "STRING",
            "isEditable": "false",
            "isRequired": "false",
            "uiValue": "",
            "dbValue": ""
        },

        "comments": {
            "displayName": "{{i18n.comments}}",
            "type": "STRING",
            "isRequired": "true",
            "numberOfLines": 3,
            "maxLength": 4000,
            "dbValue": "",
            "uiValue": ""
        }
    },
    "lifecycleHooks": {
        "onMount": "loadProperties",
        "onUpdate": {
            "action": "closePanelOnSelectionChange",
            "observers": [ "props.subPanelContext.selectionData.selected" ]
        }
    },
    "onEvent": [ {
            "eventId": "resumeEPMTask.taskPropertiesLoaded",
            "action": "populatePanelData"
        },
        {
            "eventId": "Workflow.closeOpenedPanel",
            "action": "closePanel"
        }
    ],

    "functions": {
        "getComments": {
            "functionName": "getComments",
            "parameters": [
                "{{data}}"
            ]
        }
    },

    "ctx": {
        "locationContext": ""
    },
    "messages": {
        "serverError": {
            "messageType": "ERROR",
            "messageText": "{{errorCode}}"
        }
    },
    "conditions": {

        "showInstructions": {
            "expression": "data.description.dbValue && data.description.dbValue.length>0"
        },

        "isValidToComplete": {
            "expression": "( data.comments && data.comments.dbValue.length>0)"
        }
    },

    "i18n": {
        "taskName": [
            "InboxMessages"
        ],

        "resumeTask": [
            "InboxMessages"
        ],

        "comments": [
            "InboxMessages"
        ],

        "resume": [
            "InboxMessages"
        ],

        "object_desc": [
            "InboxMessages"
        ]

    }
}
